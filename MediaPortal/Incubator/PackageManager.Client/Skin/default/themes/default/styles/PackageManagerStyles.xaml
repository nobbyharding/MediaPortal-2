<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System"
    xmlns:collections="clr-namespace:MediaPortal.UI.Presentation.DataObjects;assembly=MediaPortal.UI"
    DependsOnStyleResources="Colors,Buttons,PackageManagerConsts"
    >

  <!-- Style for a single feed item -->
  <DataTemplate x:Key="PackageItemDataTemplate" DataType="{x:Type collections:ListItem}">
    <Grid Height="{ThemeResource PackageItemHeight}" Margin="5,0,5,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="{ThemeResource PackageLogoWidth}"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Label Grid.Column="1" Grid.Row="0" Color="{ThemeResource TextColor}" Content="{Binding PackageInfo.Name}" Margin="0,0,0,2"/>

      <UniformGrid Grid.Column="1" Grid.Row="1" VerticalAlignment="Top">
        <Label Grid.Column="0" Grid.Row="0" FontSize="{ThemeResource TinyFontSize}" Color="{ThemeResource TextColor}" Content="[PackageManager.Downloads]" />
        <Label Grid.Column="1" Grid.Row="0" FontSize="{ThemeResource TinyFontSize}" Color="{ThemeResource TextColor}" Content="[PackageManager.Version]" />
        <Label Grid.Column="2" Grid.Row="0" FontSize="{ThemeResource TinyFontSize}" Color="{ThemeResource TextColor}" Content="[PackageManager.ReleaseDate]" />

        <Label Grid.Column="0" Grid.Row="1" FontSize="{ThemeResource SmallFontSize}" Color="{ThemeResource TextColor}" Content="{Binding PackageInfo.TotalDownloadCount}" />
        <Label Grid.Column="1" Grid.Row="1" FontSize="{ThemeResource SmallFontSize}" Color="{ThemeResource TextColor}" Content="{Binding PackageInfo.CurrentRelease.Version}" />
        <Label Grid.Column="2" Grid.Row="1" FontSize="{ThemeResource SmallFontSize}" Color="{ThemeResource TextColor}" Content="{Binding PackageInfo.CurrentRelease.Released}" />
      </UniformGrid>
    </Grid>
  </DataTemplate>

  <!-- ListView style for package list -->
  <Style x:Key="PackageItemListViewStyle" BasedOn="{ThemeResource ContentsMenuListViewStyle}">
    <Setter Property="ItemTemplate" Value="{ThemeResource PackageItemDataTemplate}"/>
  </Style>

</ResourceDictionary>
